{
  "coc.preferences.formatOnSaveFiletypes": [
    "Markdown"
  ],
  "markdownlint.config": {
    "default": true,
    "line_length": false,
    "MD003": false,
    "MD007": {
      "indent": 4
    },
    "MD022": false
  },
  "languageserver": {
    "go": {
      "command": "~/.local/share/vim-lsp-settings/servers/gopls/gopls",
      "rootPatterns": ["go.mod", ".git", "main.go"],
      "trace.server": "verbose",
      "filetypes": ["go"]
    },
    "vim": {
      "module": "~/.local/share/vim-lsp-settings/servers/vim-language-server/vim-language-server",
      "args": ["--node-ipc"],
      "initializationOptions": {
        "iskeyword": "@,48-57,_,192-255,-#",
        "vimruntime": "",
        "runtimepath": "",
        "diagnostic": {
          "enable": true
        },
        "indexes": {
          "runtimepath": true,
          "gap": 100,
          "count": 3,
          "projectRootPatterns" : ["strange-root-pattern", ".git", "autoload", "plugin"] 
        },
        "suggest": {
          "fromVimruntime": true,
          "fromRuntimepath": false
        }
      },
      "filetypes": [ "vim" ]
    }
  }
}
