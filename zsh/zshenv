# ser path for golang
export GOPATH=$HOME
export PATH=$PATH:$GOPATH/bin

# Set path for pyenv
export PYENV_ROOT="${HOME}/.pyenv"
if [ -d "${PYENV_ROOT}" ]; then
    export PATH=${PYENV_ROOT}/bin:$PATH
    eval "$(pyenv init -)"
    eval "$(pyenv virtualenv-init -)"
fi

# set neovim
export XDG_CONFIG_HOME=~/.config
